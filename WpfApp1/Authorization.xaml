<Page x:Class="WpfApp1.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Authorization">

    <Grid>
        <Canvas Height="400">
            <TextBlock Text="Nickname"/>
            <TextBox Name="tbNickname" Height="20" Width="100" Canvas.Top="30"/>

            <TextBlock Text="Password" Canvas.Top="70"/>
            <TextBox Name="tbPassword" Height="20" Width="100" Canvas.Top="100"/>

            <Button Width="200" Content="Connect" Click="UserConnection" Canvas.Right="20" Canvas.Top="50"/>
            <TextBlock Name="Result" Width="200" Canvas.Top="200"/>
        </Canvas>
    </Grid>
</Page>
