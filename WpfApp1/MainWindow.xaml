<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ScrollViewer>
            <TabControl>
                <TabItem Header="News" x:Name="TabNews">
                    <StackPanel x:Name="StackNews">

                    </StackPanel>
                </TabItem>
                <TabItem Header="Your subscriptions">
                    <StackPanel x:Name="StackUserSubscriptions">
                        <Canvas Height="70">
                            <TextBlock Width="500">java</TextBlock>
                            <Button Width="20" Content="X" Click="DeleteUserSubscription" Canvas.Right="20"/>
                            <TextBlock Canvas.Top="20">Описание java</TextBlock>
                        </Canvas>
                    </StackPanel>
                </TabItem>
                <TabItem Header="All subscriptions">
                    <StackPanel x:Name="StackAllSubscriptions">

                    </StackPanel>
                </TabItem>
            </TabControl>
        </ScrollViewer>
    </Grid>
</Window>
